<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="16dp">


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_id_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history_details_id"
        android:textColor="@color/basic500" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_id_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:singleLine="true"
        android:text="96AFUzFKebbwmJulY6evx9GrfYBkmn8LcUL0"
        android:textColor="@color/disabled900" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_token_status"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/history_details_reissuable"
        android:textColor="@color/basic700" />


</LinearLayout>
